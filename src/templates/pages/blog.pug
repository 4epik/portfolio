            .hero__title
                .hero__title-img
                    svg.hero__title-icon
                        use(xlink:href='../../assets/images/sprite.svg#blog_header')
                .user
                    .user__pic
                        img.user__pic-img(src="../../assets/images/foto.jpg" alt="avatar")
                    .user__description
                        .user__name 
                            h1.user__title блог
                        .user__info.blog__user-info Статьи которые я написал
